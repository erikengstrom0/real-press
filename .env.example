# Database (Neon PostgreSQL)
# Get your connection string from https://console.neon.tech
DATABASE_URL="postgresql://user:password@host/database?sslmode=require"

# AI Detection - Hugging Face (FREE, primary provider)
# Optional: API token for higher rate limits (works without token)
# Get a free token from https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=""
# Optional: Choose a different model (default: openai-community/roberta-base-openai-detector)
# HUGGINGFACE_MODEL="openai-community/roberta-large-openai-detector"

# AI Detection - GPTZero (PAID, secondary provider - $45/month)
# Only needed if you want higher accuracy, Hugging Face works fine for MVP
# Get your API key from https://gptzero.me/
GPTZERO_API_KEY=""

# App URL (set to your Vercel domain in production)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Multi-Modal AI Detection (ML Service)
# URL of the Python ML service for image/video detection
ML_SERVICE_URL="http://localhost:8000"

# Enable/disable specific detection providers
PROVIDER_IMAGE_ENABLED="true"
PROVIDER_VIDEO_ENABLED="true"
